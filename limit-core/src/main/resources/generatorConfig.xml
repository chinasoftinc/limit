<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN" "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd" >
<generatorConfiguration>
	<!-- 读取类目录下的配置文件,在取值, 弃用了 -->
	<properties resource="jdbc.properties" />
	<!-- DB驱动Jar包位置 -->
	<classPathEntry location="C:/Users/niebinxiao/.m2/repository/mysql/mysql-connector-java/5.1.34/mysql-connector-java-5.1.34.jar" />
	<context id="default" defaultModelType="flat" targetRuntime="MyBatis3">
		<!-- 更换生成类名的部分字符名称插件 -->
		<plugin type="org.mybatis.generator.plugins.RenameExampleClassPlugin">
			<property name="searchString" value="Example$" />
			<property name="replaceString" value="Exam" />
		</plugin>
		<plugin type="org.mybatis.generator.plugins.CaseInsensitiveLikePlugin"></plugin> <!-- 待研究 -->
		<plugin type="apple.common.utils.MySQLPaginationPlugin"></plugin> <!-- 分页插件,基于example -->
		<commentGenerator>
			<property name="suppressDate" value="true" /> <!-- 去除时间信息 -->
			<property name="suppressAllComments" value="true" /> <!-- 去除生成注释 -->
		</commentGenerator>
		<!-- 连接属性配置 -->
		<jdbcConnection driverClass="com.mysql.jdbc.Driver" connectionURL="jdbc:mysql://localhost:3306/application_db?useUnicode=true&amp;amp;characterEncoding=UTF-8&amp;amp;zeroDateTimeBehavior=convertToNull" userId="root" password="p123456" />
		<!-- 类型解析器, 待研究 -->
		<javaTypeResolver>
			<property name="forceBigDecimals" value="false" />
		</javaTypeResolver>

		<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

		<!-- Model生成目录, 生成后继承AbstractModel抽象类 -->
		<javaModelGenerator targetPackage="apple.module.userOpt_.model" targetProject="apple-core">
			<property name="enableSubPackages" value="true" />
			<property name="trimStrings" value="true" />
		</javaModelGenerator>
		<!-- sql.xml生成目录 -->
		<sqlMapGenerator targetPackage="apple.module.userOpt_.sqlmap" targetProject="apple-core">
			<property name="enableSubPackages" value="true" />
		</sqlMapGenerator>
		<!-- mapper.class生成目录, 已抽取统一接口, 生成后删除所有方法实现mapper接口 -->
		<javaClientGenerator type="XMLMAPPER" targetPackage="apple.module.userOpt_.mapper" targetProject="apple-core">
			<property name="enableSubPackages" value="true" />
		</javaClientGenerator>
		<!-- 表实体映射 -->
		<table tableName="kernel_user_opt" domainObjectName="UserOpt"></table>

	</context>
</generatorConfiguration>